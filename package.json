{
  "private": true,
  "workspaces": [
    "experiments/*"
  ],
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.0"
  },
  "scripts": {
    "format": "prettier --write \"experiments/**/*.{js,json,css,md}\" \"!node_modules\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
